<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CRUD BASIC</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous">

</head>
<body>

  <header>
    <nav></nav>
  </header>

  <main>
    <section class="container mt-3">
      <div class="card">
        <div class="card-header text-end">
          <a href="./create" class="btn btn-sm btn-primary">Registrar</a>
        </div>
        <div class="card-body">
          <table class="table table-sm table-striped">
            <thead>
              <tr>
                <th>ID</th>
                <th>Titulo</th>
                <th>Autor</th>
                <th>Genero</th>
                <th>Precio</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% libros.forEach(libro => { %>
                <tr>
                  <td><%= libro.id %></td>
                  <td><%= libro.titulo %></td>
                  <td><%= libro.autor %></td>
                  <td><%= libro.genero %></td>
                  <td><%= libro.precio %></td>
                  <td>
                    <a href="./edit/<%= libro.id %>" class="btn btn-sm btn-info">Editar</a>
                    <a href="./delete/<%= libro.id %>" data-libro="<%= libro.titulo %>" class="btn btn-sm btn-danger delete">Eliminar</a> 
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </section>
  </main>

  <footer>
    <p></p>
  </footer>

  <script>
    const enlaces = document.querySelectorAll(".delete");
    enlaces.forEach(element => {
      element.addEventListener("click", (event) => {
        event.preventDefault();

        const nombreLibro = event.target.getAttribute('data-libro');
        const ruta = event.target.getAttribute('href');
        if(confirm(`Â¿Estas seguro de eliminar el libro? ${nombreLibro}`)){
          window.location.href = ruta;
        }
      });
    });
  </script>
</body>
</html>